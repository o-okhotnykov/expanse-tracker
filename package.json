{
    "name": "@expanse-tracker/monorepo",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:client\"",
        "dev:client": "npm run dev -w @expanse-tracker/client",
        "dev:server": "npm run dev -w @expanse-tracker/server"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "eslint": "^9.3.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "concurrently": "^7.0.0",
        "dotenv": "^16.4.5",
        "zod": "^3.23.8"
    }
}