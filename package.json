{
    "name": "@budget-tracker/monorepo",
    "workspaces": [
        "./client",
        "./server",
        "./shared"
    ],
    "scripts": {
        "build:shared": "npm run build -w shared",
        "build:shared:check": "npm run build:check -w shared",
        "build:shared:watch": "npm run build:watch -w shared",
        "start:dev": "concurrently --kill-others \"npm run build:shared:watch\" \"npm run start:dev:server\" \"npm run start:dev:client\"",
        "start:dev:client": "npm run start:dev -w client",
        "start:dev:server": "npm run start:dev -w server",
        "start:server": "npm run start -w server"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "eslint": "^9.3.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "concurrently": "^7.0.0",
        "dotenv": "^16.4.5",
        "yup": "^1.4.0"
    }
}